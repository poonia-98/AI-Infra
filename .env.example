# ============================================================================
# AI Agent Infrastructure Platform - Environment Variables Template
# ============================================================================
# Copy this file to .env (development) or .env.production (production)
# and fill in the appropriate values for your environment.

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection URL for async operations (FastAPI)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/agentdb

# PostgreSQL connection URL for sync operations (Alembic migrations)
SYNC_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/agentdb

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Redis connection URL for caching and state management
REDIS_URL=redis://redis:6379

# ============================================================================
# MESSAGE BROKER CONFIGURATION
# ============================================================================
# NATS streaming server URL for event messaging
NATS_URL=nats://nats:4222

# ============================================================================
# SERVICE URLS (Internal Docker Network)
# ============================================================================
# Backend API service URL
CONTROL_PLANE_URL=http://backend:8000

# Executor service URL (Docker container lifecycle management)
EXECUTOR_URL=http://executor:8081

# Event processor service URL
EVENT_PROCESSOR_URL=http://event-processor:8082

# Metrics collector service URL
METRICS_URL=http://metrics-collector:8083

# WebSocket gateway service URL
WS_GATEWAY_URL=http://ws-gateway:8084

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================
# OpenTelemetry collector endpoint for trace export
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# Prometheus metrics port
PROMETHEUS_PORT=8090

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Application name
APP_NAME=AI Agent Infrastructure Platform

# Enable debug mode (set to false in production)
DEBUG=false

# Secret key for JWT token signing (change in production!)
SECRET_KEY=your-super-secret-key-change-in-production

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================
# Docker socket path for container management
DOCKER_SOCKET=unix:///var/run/docker.sock

# Default agent runtime Docker image
AGENT_IMAGE=agent-runtime:latest

# Docker network name for agent containers
AGENT_NETWORK=platform_network

# ============================================================================
# API KEYS (Optional - add if using external services)
# ============================================================================
# OpenAI API key for LLM operations
# OPENAI_API_KEY=sk-...

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
# Frontend Next.js public API URL (set in frontend/.env files)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Frontend Next.js public WebSocket URL (set in frontend/.env files)
NEXT_PUBLIC_WS_URL=ws://localhost:8084
